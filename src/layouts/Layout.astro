---
import "../design_system/reset.css";
import "../design_system/global.css";
import { fonts } from "../design_system/typography.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {
      Object.values(fonts).map(({ file }) => (
        <link as="font" crossorigin="anonymous" href={file} rel="preload" />
      ))
    }
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
